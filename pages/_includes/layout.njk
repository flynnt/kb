  <link href="https://fonts.googleapis.com/css?family=Taviraj:400,400i,700,700i|Work+Sans:400,600,700" rel="stylesheet">
  <link rel="stylesheet" media="all" href="/assets/styles/main.css?v={{ version }}" />
</head>

<body class="site">
<header class="site-hd">
  <div class="wrapper">
    <div class="masthead">
      <div class="branding">
        {% include './partials/_birb.njk' %}
      </div>
      <h1 class="hdg hdg--heraldic">Keri B. Burchfield, PhD</h1>
    </div>
  </div>
</header>
<nav class="site-nav">
  <div class="wrapper wrapper--constrained">
    <div class="hide-above-small">
      <label class="is-visually-hidden" for="smallNav">Site Navigation</label>
      <select class="field field--select" name="smallNav" id="smallNav">
        <option value="">Navigate to &hellip;</option>
        <option value="/">Home</option>
        <option value="/research">Research</option>
        <option value="/teaching">Teaching</option>
        <option value="/vitae">Vitae</option>
        <option value="/contact">Contact</option>
      </select>
    </div>
    <div class="show-above-small">
      <ul class="h-list h-list--2x">
        <li>
          <a class="txt txt--action" href="/">Home</a>
        </li>
        <li>
          <a class="txt txt--action" href="/research">Research</a>
        </li>
        <li>
          <a class="txt txt--action" href="/teaching">Teaching</a>
        </li>
        <li>
          <a class="txt txt--action" href="/vitae">Vitae</a>
        </li>
        <li>
          <a class="txt txt--action" href="/contact">Contact</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<main class="site-content">
  <div class="wrapper wrapper--constrained">{{ content | safe }}</div>
</main>
<footer role="contentinfo" class="site-ft">
  <span class="txt txt--diminutive">
    &copy; 2024 Keri Burchfield, PhD
  </span>
</footer>
{% block scriptsBody %}
  <script>
    var jumpy = document.getElementById('smallNav');
    jumpy.addEventListener('change', function(e) {
      window.location = e.currentTarget.value;
    });
  </script>
{% endblock %}
</body>
</html>
